{
  "appId": "com.construct3.launcher",
  "productName": "Construct 3 Launcher",
  "directories": {
    "output": "dist",
    "buildResources": "resources"
  },
  "files": [
    "main.js",
    "server.js",
    "preload.js",
    "index.html",
    "package.json",
    "node_modules/**/*",
    "icon.png",
    "icon.ico"
  ],
  "extraResources": [
    {
      "from": "resources/certs",
      "to": "resources/certs"
    },
    {
      "from": "resources/domains",
      "to": "resources/domains"
    }
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "certificateFile": null,
    "certificatePassword": null,
    "signingHashAlgorithms": [
      "sha256"
    ],
    "sign": null
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Construct 3 Launcher"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.exe"
  },
  "publish": null
}
